# Ez a fajl tartalmazza a rendszer alapbeallitasait
# Modositsd ezeket az ertekeket igenyeid szerint

# Email beallitasok
email=lovasz.otto@clarity.hu

# Bementi konyvtar - ide keruljenek a feldolgozando DOCX fajlok
input_folder=c:\tmp

# Kimeneti konyvtar - ide keszulnek az Excel jelentesek
output_folder=c:\tmp

# Adatbazis beallitasok
database_file=c:\tmp\Test.db

# Email targy beallitasa
email_subject=Duplikacio Ellenorzes - Eredmenyek

# Excel fajl prefix
excel_prefix=duplikacio_eredmenyek

# Debug mod (true/false)
debug_mode=false


# Statusz kuszobertekek (karakterszam alapjan)
# Rendben: ismételt karakter < status_threshold_gyanus
# Gyanús: status_threshold_gyanus <= ismételt karakter < status_threshold_masolt  
# Másolt: ismételt karakter >= status_threshold_masolt
status_threshold_gyanus=350
status_threshold_masolt=1250

# Minimális tokenhossz a sor feldolgozásához
token_min=3
